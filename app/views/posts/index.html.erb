<% if @posts.any? %>
  <% @posts.each do |post| %>
    <div class='post'>
        <%=post.title %><br>
        <%= image_tag post.image.url(:medium) %>
        <p> <%= link_to "Leave Comment", new_post_comment_path(post) %> </p>
        <div class='iron-wrapper'>
          <span class='iron-count'>
            <% if post.irons.any? %>
              <%= post.irons.count %>
            <% end %>
          </span>
            <p> <%= link_to "Iron", post_irons_path(post), method: :post, class: "iron" %> </p>
        </div>
        <% if user_signed_in? %>
          <% if current_user.posts.include?(post) %>
          <p> <%= link_to "Delete Post", post_path(post), method: :delete %> </p>
          <% end %>
        <% end %>
    </div>
  <% end %>
<% end %>
